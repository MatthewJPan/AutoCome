        xmlns:local="clr-namespace:AutoComeV1"
        mc:Ignorable="d"
        Title="Text" Height="400" Width="650" Closed="onClosed">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="pictures/notepad.jpg"/>
        </Grid.Background>
        <TextBox x:Name="content" AcceptsReturn="True"  HorizontalAlignment="Left" Height="318" Margin="10,55,0,-4" TextWrapping="Wrap" Text=" " VerticalAlignment="Top" Width="606" Cursor="Arrow" BorderBrush="White" BorderThickness="0" KeyDown="CtrlDown" />

    </Grid>
